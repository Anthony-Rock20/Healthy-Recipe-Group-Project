<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.FriendsController"
            prefHeight="700" prefWidth="800">

    <!-- Top Banner -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #9C27B0;">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Label text="Friends"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="Find and add friends to connect!"
                   style="-fx-font-size: 14; -fx-text-fill: #f0f0f0;"/>
        </VBox>
    </top>

    <!-- Center: Search & Users List -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15" style="-fx-background-color: white;">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20"/>
                </padding>

                <!-- Current Friends Section -->
                <VBox spacing="10" style="-fx-border-color: #4CAF50; -fx-border-width: 2; -fx-padding: 15;">
                    <Label text="ðŸ‘¥ Your Friends" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                    <Label fx:id="friendsCountLabel" text="Loading..." style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                    <VBox fx:id="friendsContainer" spacing="10" style="-fx-background-color: #f0f8f0;"/>
                </VBox>

                <!-- Search Bar -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" 
                               promptText="Search for users to add..." 
                               onKeyReleased="#handleSearch"
                               prefWidth="400"/>
                    <Button text="ðŸ” Search" 
                            style="-fx-background-color: #9C27B0; -fx-text-fill: white;"
                            onAction="#handleSearch"/>
                </HBox>

                <!-- Users Container -->
                <Label fx:id="usersCountLabel" text="Loading users..." style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                <VBox fx:id="usersContainer" spacing="10" style="-fx-background-color: #fafafa;"/>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>

            <Button text="ðŸ  Dashboard" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleBackToDashboard"/>
            <Button text="â¤ï¸ Favorites" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleViewFavorites"/>
            <Button text="ðŸ“¨ Shared with Me" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleViewSharedWithMe"/>
            <Button text="ðŸ“¬ Friend Requests" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #FF9800; -fx-text-fill: white;" onAction="#handleFriendRequests"/>
            <Button text="ðŸšª Logout" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #f44336; -fx-text-fill: white;" onAction="#handleLogout"/>
        </HBox>
    </bottom>
</BorderPane>
