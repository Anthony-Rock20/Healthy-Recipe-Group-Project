<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DatePicker?>
<VBox spacing="12" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.peakplatesapp.HomeController" style="-fx-padding:20;">
    <Label fx:id="welcomeLabel" text="Home" style="-fx-font-size:18; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Date:" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="datePicker"/>
    </HBox>
    <!-- Calories -->
    <VBox spacing="6">
        <Label text="Calories"/>
        <ProgressBar fx:id="calorieBar" prefWidth="400" progress="0.0"/>
        <Label fx:id="calorieLabel" text="0 / 0 kcal (0%)"/>
    </VBox>

    <!-- Protein -->
    <VBox spacing="6">
        <Label text="Protein (g)"/>
        <ProgressBar fx:id="proteinBar" prefWidth="400" progress="0.0"/>
        <Label fx:id="proteinLabel" text="0 / 0 g (0%)"/>
    </VBox>

    <!-- Carbs -->
    <VBox spacing="6">
        <Label text="Carbs (g)"/>
        <ProgressBar fx:id="carbBar" prefWidth="400" progress="0.0"/>
        <Label fx:id="carbLabel" text="0 / 0 g (0%)"/>
    </VBox>

    <!-- Fats -->
    <VBox spacing="6">
        <Label text="Fats (g)"/>
        <ProgressBar fx:id="fatBar" prefWidth="400" progress="0.0"/>
        <Label fx:id="fatLabel" text="0 / 0 g (0%)"/>
    </VBox>

    <HBox spacing="10" style="-fx-padding: 10 0 0 110;">


        <Button text="â—€"
                style="-fx-background-color: #00C7D9; -fx-text-fill: white; -fx-padding: 10 20;"
                onAction="#goBack"
        />
        <Button text="Preference"
                style="-fx-background-color: #00C7D9; -fx-text-fill: white; -fx-padding: 10 20;"
                onAction="#handlePreferences"/>

        <Button text="Log Meal"
                style="-fx-background-color: #00C7D9; -fx-text-fill: white; -fx-padding: 10 20;"
                onAction="#openLogMealPopup"
        />

    </HBox>
</VBox>
