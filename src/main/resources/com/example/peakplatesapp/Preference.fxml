<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.PreferenceController"
            prefWidth="1000"
            prefHeight="800">

    <!-- Background Image -->
    <ImageView fitWidth="1000"
               fitHeight="800"
               preserveRatio="false">
        <image>
            <Image url="@PeakPlatesBackground.png"/>
        </image>
    </ImageView>

    <!-- Glass Panel -->
    <VBox layoutX="250"
          layoutY="120"
          prefWidth="500"
          prefHeight="560"
          spacing="16"
          alignment="CENTER"
          style="
              -fx-background-color: rgba(255,255,255,0.18);
              -fx-background-radius: 20;
              -fx-border-radius: 20;
              -fx-border-color: rgba(255,255,255,0.35);
              -fx-border-width: 1.5;
              -fx-padding: 30;
          ">

        <!-- Back Button -->
        <HBox alignment="CENTER_LEFT">
            <Button text="â® Back"
                    onAction="#handleBack"
                    style="
                        -fx-background-color: white;
                        -fx-text-fill: #444;
                        -fx-font-weight: bold;
                        -fx-background-radius: 20;
                        -fx-padding: 8 18;
                    "/>
        </HBox>

        <!-- Title -->
        <Label text="Set Your Dietary Goals"
               style="-fx-font-size: 26;
                      -fx-font-weight: bold;
                      -fx-text-fill: white;" />

        <!-- Calories -->
        <VBox spacing="4" prefWidth="360">
            <Label text="Daily Calorie Goal"
                   style="-fx-text-fill: white;" />
            <TextField fx:id="caloriesField"
                       promptText="e.g. 2500"/>
        </VBox>

        <!-- Protein -->
        <VBox spacing="4" prefWidth="360">
            <Label text="Daily Protein Goal (g)"
                   style="-fx-text-fill: white;" />
            <TextField fx:id="proteinField"
                       promptText="e.g. 150"/>
        </VBox>

        <!-- Carbs -->
        <VBox spacing="4" prefWidth="360">
            <Label text="Daily Carbs Goal (g)"
                   style="-fx-text-fill: white;" />
            <TextField fx:id="carbsField"
                       promptText="e.g. 300"/>
        </VBox>

        <!-- Fats -->
        <VBox spacing="4" prefWidth="360">
            <Label text="Daily Fat Goal (g)"
                   style="-fx-text-fill: white;" />
            <TextField fx:id="fatsField"
                       promptText="e.g. 70"/>
        </VBox>

        <!-- Save Button -->
        <Button fx:id="saveButton"
                text="ðŸ’¾ Save Preferences"
                onAction="#handleSave"
                prefWidth="260"
                style="
                    -fx-background-color: #00C7D9;
                    -fx-text-fill: white;
                    -fx-font-size: 15;
                    -fx-font-weight: bold;
                    -fx-background-radius: 30;
                    -fx-padding: 10 25;
                "/>

    </VBox>

</AnchorPane>
