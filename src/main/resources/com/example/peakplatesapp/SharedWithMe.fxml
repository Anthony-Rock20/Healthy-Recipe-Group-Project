<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.SharedWithMeController"
            prefWidth="1000"
            prefHeight="800">

    <!-- Background -->
    <ImageView fitWidth="1000"
               fitHeight="800"
               preserveRatio="false">
        <image>
            <Image url="@PeakPlatesBackground.png"/>
        </image>
    </ImageView>

    <!-- Glass Panel -->
    <VBox layoutX="180"
          layoutY="80"
          prefWidth="640"
          prefHeight="640"
          spacing="16"
          alignment="TOP_CENTER"
          style="
              -fx-background-color: rgba(255,255,255,0.18);
              -fx-background-radius: 20;
              -fx-border-radius: 20;
              -fx-border-color: rgba(255,255,255,0.35);
              -fx-border-width: 1.5;
              -fx-padding: 25;
          ">

        <!-- Header -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="â¬… Back"
                    onAction="#handleBackToDashboard"
                    style="
                        -fx-background-color: white;
                        -fx-text-fill: #444;
                        -fx-font-weight: bold;
                        -fx-background-radius: 20;
                        -fx-padding: 8 18;
                    "/>

            <Label text="Shared with Me"
                   style="-fx-font-size: 26;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="sharedCountLabel"
                   text="0 recipes"
                   style="-fx-text-fill: rgba(255,255,255,0.8);" />
        </HBox>

        <!-- Search -->
        <HBox spacing="10">
            <TextField fx:id="searchField"
                       promptText="ðŸ” Search shared recipes..."
                       onKeyReleased="#handleSearch"
                       prefWidth="420"/>

            <Button text="Clear"
                    onAction="#handleClearSearch"/>
        </HBox>

        <!-- Filters -->
        <Label text="Filter by Tags"
               style="-fx-text-fill: white;
                      -fx-font-weight: bold;" />

        <ScrollPane fitToHeight="true"
                    hbarPolicy="AS_NEEDED"
                    vbarPolicy="NEVER"
                    prefHeight="55"
                    style="-fx-background-color: transparent;">
            <content>
                <FlowPane fx:id="filterTagsContainer"
                          hgap="8"
                          vgap="8"
                          prefWrapLength="600"/>
            </content>
        </ScrollPane>

        <!-- Shared Recipes -->
        <ScrollPane fitToWidth="true"
                    prefHeight="420"
                    style="-fx-background-color: transparent;">
            <VBox fx:id="sharedContainer"
                  spacing="15"
                  style="-fx-background-color: transparent;">
                <Label text="No recipes shared with you yet!"
                       style="-fx-text-fill: rgba(255,255,255,0.75);
                              -fx-font-size: 14;" />
            </VBox>
        </ScrollPane>

        <!-- Bottom Navigation -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="ðŸ“¤ Upload Recipe" onAction="#handleUploadRecipe"/>
            <Button text="â¤ï¸ Favorites" onAction="#handleViewFavorites"/>
            <Button text="ðŸ‘¥ Friends"
                    onAction="#handleViewFriends"
                    style="-fx-background-color: #9C27B0; -fx-text-fill: white;"/>
            <Button text="ðŸšª Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>

    </VBox>

</AnchorPane>
