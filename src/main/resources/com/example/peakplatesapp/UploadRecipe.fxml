                    <!-- Dietary Info Row -->
                    <HBox spacing="10">
                        <VBox spacing="4">
                            <Label text="Calories"/>
                            <TextField fx:id="caloriesField" promptText="kcal"/>
                        </VBox>
                        <VBox spacing="4">
                            <Label text="Protein (g)"/>
                            <TextField fx:id="proteinField" promptText="g"/>
                        </VBox>
                        <VBox spacing="4">
                            <Label text="Carbs (g)"/>
                            <TextField fx:id="carbField" promptText="g"/>
                        </VBox>
                        <VBox spacing="4">
                            <Label text="Fats (g)"/>
                            <TextField fx:id="fatField" promptText="g"/>
                        </VBox>
                    </HBox>

                    <!-- Tags selection -->
