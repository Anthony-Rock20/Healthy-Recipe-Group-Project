        <VBox spacing="10" style="-fx-background-color: #4CAF50;">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <Label text="Upload Recipe"
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <Label text="Share your delicious recipes with the community!"
                   style="-fx-font-size: 14; -fx-text-fill: #f0f0f0;"/>
        </VBox>
    </top>

    <!-- Form -->
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets top="25" bottom="25" left="40" right="40"/>
                </padding>

                <!-- Image Selection -->
                <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 2;">
