<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.ShareRecipeController"
            prefHeight="800.0" prefWidth="1000.0">

    <!-- Top Section -->
    <top>
        <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>

            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label text="Share Recipe" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="recipeNameLabel" text="Recipe: " style="-fx-font-size: 14; -fx-text-fill: #666;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Users List Section -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="usersContainer" spacing="10" style="-fx-background-color: white;">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20"/>
                </padding>
                <Label text="Loading users..." style="-fx-font-size: 16; -fx-text-fill: #999;"/>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>

            <Button text="ðŸ  Dashboard" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleBackToDashboard"/>
            <Button text="â¤ï¸ Favorites" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleViewFavorites"/>
            <Button text="ðŸ“¨ Shared with Me" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleViewSharedWithMe"/>
            <Button text="ðŸšª Logout" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #f44336; -fx-text-fill: white;" onAction="#handleLogout"/>
        </HBox>
    </bottom>
</BorderPane>
