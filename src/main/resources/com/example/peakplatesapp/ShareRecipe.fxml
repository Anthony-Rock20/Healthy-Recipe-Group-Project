<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.ShareRecipeController"
            prefWidth="1000"
            prefHeight="800">

    <!-- Background Image -->
    <ImageView fitWidth="1000"
               fitHeight="800"
               preserveRatio="false">
        <image>
            <Image url="@PeakPlatesBackground.png"/>
        </image>
    </ImageView>

    <!-- Glass Panel -->
    <VBox layoutX="180"
          layoutY="90"
          prefWidth="640"
          prefHeight="620"
          spacing="16"
          alignment="TOP_CENTER"
          style="
              -fx-background-color: rgba(255,255,255,0.18);
              -fx-background-radius: 20;
              -fx-border-radius: 20;
              -fx-border-color: rgba(255,255,255,0.35);
              -fx-border-width: 1.5;
              -fx-padding: 25;
          ">

        <!-- Header -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Share Recipe"
                   style="-fx-font-size: 26;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="recipeNameLabel"
                   text="Recipe:"
                   style="-fx-text-fill: rgba(255,255,255,0.8);" />
        </HBox>

        <!-- Users List -->
        <ScrollPane fitToWidth="true"
                    prefHeight="460"
                    style="-fx-background-color: transparent;">
            <VBox fx:id="usersContainer"
                  spacing="12"
                  style="-fx-background-color: transparent;">
                <Label text="Loading users..."
                       style="-fx-text-fill: rgba(255,255,255,0.75);
                              -fx-font-size: 14;" />
            </VBox>
        </ScrollPane>

        <!-- Bottom Navigation -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="ðŸ  Dashboard" onAction="#handleBackToDashboard"/>
            <Button text="â¤ï¸ Favorites" onAction="#handleViewFavorites"/>
            <Button text="ðŸ‘¥ Friends"
                    onAction="#handleViewFriends"
                    style="-fx-background-color: #9C27B0; -fx-text-fill: white;"/>
            <Button text="ðŸ“¨ Shared with Me" onAction="#handleViewSharedWithMe"/>
            <Button text="ðŸšª Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>

    </VBox>

</AnchorPane>
