            </HBox>
        </VBox>
    </top>

    <!-- Center Section for Recipes -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <VBox fx:id="recipesContainer" spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20"/>
                </padding>
                <Label text="No recipes yet. Upload one to get started!" style="-fx-font-size: 16; -fx-text-fill: #999;"/>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation/Settings -->
