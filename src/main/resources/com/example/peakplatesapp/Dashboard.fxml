<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.DashboardController"
            prefHeight="800.0" prefWidth="1000.0">

    <!-- Top Section: BorderPane with sticky search/filter -->
    <top>
        <BorderPane style="-fx-background-color: #f5f5f5;">
            <!-- Welcome and Upload Button (always visible) -->
            <top>
                <VBox spacing="15" style="-fx-background-color: #f5f5f5;">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label fx:id="welcomeLabel" text="Welcome!"
                               style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ“¤ Upload Recipe"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"
                                onAction="#handleUploadRecipe"/>
                        <Button text="ðŸ  Home"
                                style="-fx-background-color: #00C7D9; -fx-text-fill: white; -fx-padding: 10 20;"
                                onAction="#handleViewHome"/>
                    </HBox>
                </VBox>
            </top>
            <!-- Search and Filter (sticky at top, below welcome) -->
            <bottom>
                <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                    <padding>
                        <Insets top="15" bottom="15" left="20" right="20"/>
                    </padding>
                    <!-- Search Bar -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="searchField" promptText="ðŸ” Search recipes by name..." prefWidth="400" onKeyReleased="#handleSearch"/>
                        <Button text="Clear" style="-fx-font-size: 12;" onAction="#handleClearSearch"/>
                    </HBox>
                    <!-- Filter Tags -->
                    <Label text="Filter by Tags:" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
                    <ScrollPane fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER" prefHeight="56" style="-fx-background-color: transparent; -fx-padding: 4 0 4 0;">
                        <content>
                            <FlowPane fx:id="filterTagsContainer" hgap="8" vgap="8" prefWrapLength="900"/>
                        </content>
                    </ScrollPane>
                </VBox>
            </bottom>
        </BorderPane>
    </top>

    <!-- Recipes Section -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <VBox fx:id="recipesContainer" spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets top="20" bottom="20" left="20" right="20"/>
                </padding>
                <Label text="Loading recipes..." style="-fx-font-size: 16; -fx-text-fill: #999;"/>
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="10" bottom="10" left="20" right="20"/>
            </padding>

            <Button text="â¤ï¸ Favorites" style="-fx-font-size: 12;" onAction="#handleViewFavorites"/>
            <Button text="ðŸ‘¥ Friends" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #9C27B0; -fx-text-fill: white;" onAction="#handleViewFriends"/>
            <Button text="ðŸ“¨ Shared with Me" style="-fx-font-size: 12; -fx-padding: 8 15;" onAction="#handleViewSharedWithMe"/>
            <Button text="ðŸšª Logout"
                    style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #f44336; -fx-text-fill: white;"
                    onAction="#handleLogout"/>
        </HBox>
    </bottom>
</BorderPane>
