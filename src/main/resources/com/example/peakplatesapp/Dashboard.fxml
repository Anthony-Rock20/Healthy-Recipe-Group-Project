<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.peakplatesapp.DashboardController"
            prefHeight="800.0" prefWidth="1000.0">

    <!-- Top Section with Welcome and Upload Button -->
    <top>
        <VBox spacing="15" style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 0 0 2 0;">
            <padding>
                <Insets top="20" bottom="20" left="20" right="20"/>
            </padding>
            
            <HBox spacing="20" alignment="CENTER_LEFT">
                <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
